.category-wrapper {
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  background-color: #f2f2f2;
}
.category-wrapper-inner {
  height: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 0 20rpx 0;
}
.category-wrapper-inner .category-item-wrapper {
  box-sizing: border-box;
  padding: 10rpx 30rpx;
  border-radius: 1000rpx;
  background-color: #fff;
  font-size: 28rpx;
  margin-right: 20rpx;
}
.category-wrapper-inner .category-item-wrapper.active {
  color: #fff;
  background-color: green;
}
