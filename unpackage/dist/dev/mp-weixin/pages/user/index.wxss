/* 文章场景相关 */
.user-wrapper {
  width: 100vw;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}

/* 用户信息 */
.userinfo-wrapper {
  display: flex;
  padding: 10rpx;
  color: #fff;
  margin-bottom: 20rpx;
}
.userinfo-wrapper .avatar-user {
  width: 110rpx;
  height: 110rpx;
  border-radius: 10000rpx;
  overflow: hidden;
  margin: 0 20rpx 0 10rpx;
}
.userinfo-wrapper .info {
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.userinfo-wrapper .info .name {
  font-size: 32rpx;
}
.userinfo-wrapper .info .account {
  font-size: 26rpx;
}

/* 功能区 */
.funcArea {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  padding: 15rpx 30rpx;
}
.funcArea.footer {
  position: fixed;
  bottom: 0;
  width: calc(100vw - 60rpx);
  background-color: rgba(0, 0, 0, 0);
}
.funcArea.footer .icons-item-wrapper {
  justify-content: space-between;
}
.funcArea .title {
  font-size: 32rpx;
  margin-bottom: 15rpx;
}
.funcArea .icons-item-wrapper {
  display: flex;
  justify-content: space-around;
}
.funcArea .icons-item-wrapper .icons-item {
  display: flex;
  flex-direction: column;
}
.funcArea .icons-item-wrapper .icons-item .icon {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 10rpx;
}