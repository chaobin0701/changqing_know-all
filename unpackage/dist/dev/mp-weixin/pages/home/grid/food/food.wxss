.shop-list-wrapper {
  padding: 20rpx;
}
.shop-list-wrapper .shop-item-wrapper {
  width: 100%;
}
.shop-item {
  display: flex;
  align-items: center;
  border-radius: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.shop-item .shop-image {
  width: 210rpx;
  height: 210rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}
.shop-item .shop-info-wrapper {
  font-size: 32rpx;
}
.shop-item .shop-info-wrapper .shop-title {
  font-size: 32rpx;
}
.shop-item .shop-info-wrapper .shop-subTitle {
  color: #ccc;
}
.shop-item .shop-info-wrapper .shop-location {
  color: #ccc;
}
.shop-item .shop-info-wrapper .shop-delivery {
  color: orange;
}
.shop-item .shop-info-wrapper .shop-tags {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
}
.shop-item .shop-info-wrapper .shop-tags .shop-tag {
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
  padding: 2rpx 8rpx;
  color: red;
  border: 1px solid red;
  font-size: 28rpx;
}