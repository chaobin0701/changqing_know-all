.publish-item.hidden {
  width: 0px !important;
  height: 0px !important;
  visibility: hidden;
  margin: 0 !important;
  position: fixed;
}
.publish-item.hidden::before {
  display: none !important;
}
.publish-wrapper {
  position: fixed;
  right: 30rpx;
  bottom: 80rpx;
  display: flex;
  border-radius: 1000rpx;
  background-color: #fff;
  padding: 15rpx 40rpx;
  box-shadow: 0px 0px 10rpx 2rpx rgba(0, 0, 0, 0.1);
}
.publish-wrapper .publish-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.publish-wrapper .publish-item:nth-child(n+2) {
  margin-left: 40rpx;
  position: relative;
}
.publish-wrapper .publish-item:nth-child(n+2)::before {
  content: "";
  position: absolute;
  display: block;
  height: 60rpx;
  width: 2rpx;
  background-color: #BBBBBB;
  left: -20rpx;
  bottom: 15rpx;
  /* 可选，根据需要进行调整 */
}
.publish-wrapper .publish-item .icon {
  width: 70rpx;
  height: 70rpx;
}
.publish-wrapper .publish-item text {
  color: #666970;
  font-size: 28rpx;
  white-space: nowrap;
}